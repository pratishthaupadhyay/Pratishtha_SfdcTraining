<apex:page controller="JobRegistrationCustom" >
    <apex:form >
         <apex:pageBlock mode="edit">
             <apex:pageMessages />
             <apex:pageBlockSection >
                 <apex:inputField value="{!job.Name__c }"/>
                 <apex:inputField value="{!job.Description__c }"/>        
                 <apex:inputField value="{!job.Number_of_Positons__c }"/>        
                 <apex:inputField value="{!job.Expires_On__c }"/>
                 <apex:inputField value="{!job.Active__c }"/>
                 <apex:inputField value="{!job.Salary_Offered__c }"/>
                 <apex:inputField value="{!job.ContactId__c}"/> 
                 <apex:inputField value="{!job.Total_Applicants__c }"/>
                 <apex:inputField value="{!job.Hired_Applicants__c }"/>
                 <apex:inputField value="{!job.Job_Type__c }"/>            
                 <apex:inputField value="{!job.Required_Skills__c }"/>
                 <apex:inputField value="{!job.Qualification_Required__c }"/>
                 <apex:inputField value="{!job.Certification_Required__c }"/>
             </apex:pageBlockSection>
              <apex:pageBlockButtons location="bottom">
            <apex:commandButton action="{! save }" value="Save" />        

           </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>